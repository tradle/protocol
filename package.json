{
  "name": "@tradle/protocol",
  "version": "5.1.1",
  "description": "Tradle protocol v2",
  "main": "./cjs/index.js",
  "types": "./cjs/index.d.ts",
  "scripts": {
    "build-buffers-js": "protocol-buffers lib/schema.proto --output lib/schema.js && (npx standard --fix lib/schema.js > /dev/null; echo Cleaned schema.)",
    "build-buffers-dts": "protocol-buffers-dts lib/schema.proto --output lib/schema.d.ts",
    "build-buffers": "npm run build-buffers-js; npm run build-buffers-dts",
    "build-ts": "tsc && cp lib/schema* cjs/lib",
    "build": "npm run build-buffers && npm run build-ts",
    "prepare": "rm -r cjs && npm run build && npm run lint && npm run coverage",
    "test": "npm run lint && npm run unit",
    "unit": "ts-node test/index",
    "coverage": "c8 npm run unit",
    "lint": "ts-standard"
  },
  "ts-standard": {
    "ignore": "lib/schema.js"
  },
  "exports": {
    ".": {
      "types": "./cjs/index.d.ts",
      "require": "./cjs/index.js"
    },
    "./constants": {
      "types": "./cjs/lib/constants.d.ts",
      "require": "./cjs/lib/constants.js"
    },
    "./errors": {
      "types": "./cjs/lib/errors.d.ts",
      "require": "./cjs/lib/errors.js"
    },
    "./schema": {
      "types": "./cjs/lib/schema.d.ts",
      "require": "./cjs/lib/schema.js"
    },
    "./types": {
      "types": "./cjs/lib/types.d.ts",
      "require": "./cjs/lib/types.js"
    },
    "./utils": {
      "types": "./cjs/lib/utils.d.ts",
      "require": "./cjs/lib/utils.js"
    }
  },
  "author": "Mark Vayngrib <mark@tradle.io> (http://github.com/mvayngrib)",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@tradle/constants": "github:tradle/constants#type-interfaces",
    "@tradle/embed": "^1.4.2",
    "@tradle/merkle-proofs": "^2.0.0",
    "@tradle/merkle-tree-stream": "^4.1.1",
    "@tradle/typeforce": "^2.1.0",
    "@types/json-stable-stringify": "^1.0.34",
    "@types/lodash": "^4.14.179",
    "elliptic": "^6.3.1",
    "flat-tree": "^1.9.0",
    "json-stable-stringify": "^1.0.1",
    "lodash": ">=4.17",
    "protocol-buffers-encodings": "^1.1.1",
    "secp256k1": "^4.0.3",
    "traverse": "^0.6.6"
  },
  "devDependencies": {
    "@types/elliptic": "^6.4.14",
    "@types/flat-tree": "^1.9.0",
    "@types/secp256k1": "^4.0.3",
    "@types/traverse": "^0.6.32",
    "c8": "^7.11.0",
    "fresh-tape": "^5.5.0",
    "protocol-buffers": "^4.2.0",
    "protocol-buffers-dts": "^1.0.0",
    "standard": "^16.0.4",
    "ts-node": "^10.5.0",
    "ts-standard": "^11.0.0",
    "typescript": "^4.4.4"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tradle/protocol.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/tradle/protocol/issues"
  },
  "homepage": "https://github.com/tradle/protocol#readme"
}
